#!/usr/bin/python3

"""

This module is made by a module that adds two numbers

"""
def add_integer(a, b=98):

""" Function that adds two integers and/or float numbers

	Args:	
	    a: first number
	    b: second number

	Returns:
	    The addition of the two numbers

	Raises:
	    Typeerror: If a or b are not integers and/or float numbers

"""

   if not isinstance(a, (int, float))
   or not isinstance(b, (int, float)):
        raise TypeError("a must be an integer or b must be an integer")
    a = int(a)
    b = int(b)
    return a + b
